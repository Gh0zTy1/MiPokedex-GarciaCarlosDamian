<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PokemonRegistryActivity"
    android:orientation="vertical"
    android:background="@color/pallet_off_white"
    android:gravity="center_horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="12dp"
        app:cardUseCompatPadding="true"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:padding="16dp"
            android:background="@android:color/white"
            android:clipToPadding="false">

            <TextView
                android:id="@+id/tvFormTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agregar Pokemon"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/pallet_dark_text"
                android:layout_marginBottom="28dp"/>

            <EditText
                android:id="@+id/etPokemonId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ID del Pokemon"
                android:inputType="text"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/etPokemonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre del PokÃ©mon"
                android:inputType="textPersonName"
                android:layout_marginBottom="16dp" />

            <ImageView
                android:id="@+id/ivPokemonThumbnail"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_marginBottom="12dp"
                android:background="@color/white"
                android:contentDescription="Imagen seleccionada" />

            <Button
                android:id="@+id/btnSelectImage"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text="Seleccionar Imagen"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginBottom="24dp"
                android:backgroundTint="@color/pallet_brown"
                />

            <Button
                android:id="@+id/btnSavePokemon"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Guardar Pokemon"
                android:backgroundTint="@color/pallet_dark_green"
                android:textColor="@color/white"
                android:textSize="18sp"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>