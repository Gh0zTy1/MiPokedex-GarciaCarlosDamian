<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <solid android:color="#1A000000"/>
            <padding android:bottom="2dp" android:right="2dp" android:left="1dp" android:top="1dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F44336"/> <corners android:radius="100dp"/>
        </shape>
    </item>

    <item android:top="85dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:bottomLeftRadius="100dp" android:bottomRightRadius="100dp"/>
        </shape>
    </item>

    <item android:top="80dp" android:bottom="80dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/black"/>
        </shape>
    </item>

    <item android:top="70dp" android:bottom="70dp" android:left="70dp" android:right="70dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/white"/>
            <stroke android:width="4dp" android:color="@android:color/black"/>
        </shape>
    </item>
</layer-list>